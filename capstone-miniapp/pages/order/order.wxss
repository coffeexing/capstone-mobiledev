/* pages/order/order.wxss */
.page {
  background: #f6f7fb;
  min-height: 100vh;
}

.list {
  height: 100vh;
  box-sizing: border-box;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin: 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.06);
}

.store-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.tag {
  font-size: 22rpx;
  color: #8a6d3b;
  background: #f6efe4;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
}

.store {
  flex: 1;
  font-weight: 600;
  font-size: 30rpx;
  color: #111;
}

.status {
  color: #7f8c8d;
  font-size: 26rpx;
}

.goods-row {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.thumb {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  background: #f2f2f2;
  margin-right: 20rpx;
}

.goods-info {
  flex: 1;
  min-width: 0;
}

.name {
  font-size: 28rpx;
  color: #222;
  font-weight: 600;
}

.spec {
  font-size: 24rpx;
  color: #8f8f8f;
  margin-top: 6rpx;
}

.qty {
  color: #666;
  font-size: 26rpx;
  margin-left: 12rpx;
}

.meta {
  display: flex;
  justify-content: space-between;
  color: #70757a;
  font-size: 24rpx;
  margin-top: 8rpx;
}

.total {
  color: #111;
  font-weight: 600;
}

/* 操作区排版：两端对齐 */
.actions {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
}

/* 左侧“更多/收起”纯文字，点击热区放大但不显示按压效果 */
.link {
  color: #111;                 /* 纯黑字，和图一致 */
  font-size: 26rpx;
  padding: 12rpx 8rpx;         /* 扩大可点区域 */
}

/* 右侧容器把按钮推到最右 */
.right {
  margin-left: auto;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

/* 通用按钮复用 */
.btn {
  height: 55rpx;
  line-height: 48rpx;
  max-width: 150rpx;
  padding: 0 18rpx;
  font-size: 24rpx;
  border-radius: 9999rpx;      /* 胶囊形状 */
  box-sizing: border-box;
}

/* “再来一单”——白底描边样式 */
.btn.outline {
  background: #fff;
  color: #ff6700;              /* 文字颜色 = 描边色 */
  border: 4rpx solid #ff6700;
  box-shadow: none;
}

/* 去掉小程序 Button 默认的点击态边框 */
.btn::after {
  border: none;
}
/* pages/login/login.wxss */
.page { min-height: 100vh; background: #F6F8FC; }
.header{
  height:320rpx;background:linear-gradient(180deg,#ff9c35 0%,#ffb667 100%);
  border-bottom-left-radius:40rpx;border-bottom-right-radius:40rpx;
  padding:80rpx 48rpx 0;box-sizing:border-box;color:#fff;
}
.hello{font-size:60rpx;font-weight:600;}

.card{
  position:relative;top:-80rpx;margin:0 40rpx;background:#fff;border-radius:24rpx;
  box-shadow:0 12rpx 36rpx rgba(0,0,0,0.08);padding:40rpx 36rpx 32rpx;
}
.card-title{font-size:36rpx;font-weight:600;margin-left:10rpx;margin-bottom:30rpx;}

.field{margin-bottom:24rpx; position: relative;}
.input{
  width:100%;height:92rpx;line-height:92rpx;background:#F3F5F7;border-radius:18rpx;
  padding:0 28rpx;box-sizing:border-box;font-size:30rpx;
}
.pwd-row{display:flex;align-items:center;}
.pwd-input{flex:1;padding-right:120rpx;}
.toggle{
  position:absolute;right:28rpx;top:50%;transform:translateY(-50%);
  font-size:26rpx;color:#576b95;
}

.agree-wrap{margin:8rpx 4rpx 28rpx;}
.agree{display:flex;align-items:center;flex-wrap:wrap;gap:8rpx;color:#666;font-size:26rpx;}
.link{color:#2A7BFF;}

.login-btn{
  margin-top: 40rpx;margin-bottom: 20rpx;
  width:100%;height:96rpx;line-height:64rpx;text-align:center;border-radius:48rpx;
  background-color:#ff9c35 !important;color: #fff !important;
  font-size:32rpx;font-weight:600;box-shadow:0 10rpx 20rpx #ffb667;
}
.login-btn:disabled{opacity:.5;box-shadow:none;}

.links{display:flex;justify-content:space-between;margin-top:20rpx;}
.link-left,.link-right{color:#7f8a99;font-size:26rpx;}

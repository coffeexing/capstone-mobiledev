/* pages/cart/cart.wxss */
.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f5f5f5;
}

.header {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.main {
  flex: 1;
  display: flex;
  align-items: stretch;
  overflow: hidden;
}

.left {
  width: 25%;
  background: #fff;
  border-right: 1rpx solid #eee;
  box-sizing: border-box;
}

.left-item {
  padding: 28rpx 18rpx;
  font-size: 26rpx;
  color: #666;
  height: 120rpx;
  line-height: 64rpx;
  box-sizing: border-box;
  text-align: center;
  position: relative;
}

.left-item.active {
  color: #222;
  font-weight: 700;
  background: #fff;
}

.left-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 1.2em;
  background-color: #ff6700;
}

.right {
  flex: 1;
  padding: 10rpx;
  background: #f6f6f6;
  box-sizing: border-box;
}

.product-card {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 16rpx;
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0 1rpx 0 rgba(0,0,0,0.02);
}

.thumb {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  background: #eee;
  flex-shrink: 0;
}

.info {
  padding-left: 30rpx;
  flex: 1;
  color: #222;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  display: block;
}

.detail {
  font-size: 22rpx;
  font-weight: 600;
  align-items: baseline;
  display: block;
  color: #708090;
  margin-top: 10rpx;
  margin-bottom: 25rpx;
}

.price-box {
  display: flex;
  align-items: flex-end;
  margin-top: 12rpx;
  font-weight: 600;
  color: #ff4500;
}

.price {
  align-items: baseline;
}

.price-small {
  font-size: 24rpx;
}

.price-normal {
  font-size: 32rpx;
}

.picker {
  display: flex;
  margin-left: auto;
}

.quantity-selector {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.quantity-btn {
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
}

.quantity-display {
  min-width: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.cart-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  box-sizing: border-box;
  z-index: 100;
}

.cart-left {
  flex: 1;
  display: flex;
  align-items: center;
}

.cart-icon-wrapper {
  position: relative;
  margin-right: 20rpx;
}

.cart-icon {
  width: 60rpx;
  height: 60rpx;
}

.cart-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: red;
  color: #fff;
  font-size: 20rpx;
  min-width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
  box-sizing: border-box;
}

.cart-total {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.cart-checkout {
  background: #ff4500;
  color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 60rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.cart-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 40rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.clear-cart {
  font-size: 28rpx;
  color: #666;
}

.cart-list {
  max-height: 60vh;
  width: 90%;
  margin: 0 auto;
  display: inline-block;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
}

.cart-item:last-child {
  border-bottom: none;
}

.item-thumb {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  background: #eee;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.item-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.item-detail {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.item-price {
  font-size: 28rpx;
  color: #ff4500;
  font-weight: 600;
}

.item-quantity {
  display: flex;
  align-items: center;
  gap: 10rpx;
  justify-content: flex-end;
}

.item-quantity .quantity-btn {
  width: 40rpx;
  height: 40rpx;
}

.quantity-num {
  font-size: 28rpx;
  font-weight: 700;
  color: #333;
  min-width: 40rpx;
  text-align: center;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-top: 1rpx solid #eee;
  background: #fff;
}

.footer-total {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.footer-checkout {
  background: #ff4500;
  color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 60rpx;
  font-size: 28rpx;
  font-weight: 600;
}
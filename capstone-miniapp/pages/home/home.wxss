/**index.wxss**/
.scroll {
  background: #f6f7fb;
}

.top {
  height: 25vh;
}

.top swiper {
  height: 25vh;
}

.poster {
  height: 25vh;
  background-size: cover;
}

.top image {
  width: 100%;
  height: 25vh;
}

/** 会员卡片 **/
.member-card {
  margin: 30rpx;
  padding: 50rpx;
  background-color: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.member-row {
  display: flex;
  align-items: center;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.member-info {
  flex: 1;
}

.phone {
  font-size: 30rpx;
  font-weight: 600;
  color: #111;
}

.tag {
  margin-top: 6rpx;
  display: inline-block;
  font-size: 22rpx;
  color: #7a5ef3;
  background: #f0ecff;
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
}

/* 外层容器：水平排列 */
.stats {
  display: flex;
  justify-content: flex-end;
  /* 靠右排列 */
  align-items: center;
  gap: 60rpx;
  /* 两块之间的间距 */
}

/* 单个统计块：垂直排列、居中 */
.stat {
  display: flex;
  flex-direction: column;
  align-items: center;
  /* ✅ 水平居中 */
}

/* 数字样式 */
.stat-num {
  font-size: 36rpx;
  font-weight: 700;
  color: #111;
  line-height: 1.2;
  /* ✅ 保证数字和文字间距一致 */
  text-align: center;
}

/* 文字样式 */
.stat-text {
  margin-top: 6rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}

.progress {
  height: 16rpx;
  margin: 20rpx 0 8rpx;
  position: relative;
}

.bar-bg {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: #f0f1f5;
  border-radius: 999rpx;
}

.bar-fill {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  background: #ff9c35;
  border-radius: 999rpx;
}

.progress-text {
  text-align: right;
  color: #9096a3;
  font-size: 22rpx;
}

.services-card {
  margin: 30rpx;
  padding: 20rpx;
  background-color: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.login-card {
  margin: 30rpx;
  padding: 20rpx 30rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.06);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.login-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.login-text {
  flex: 1;
  padding: 0 12rpx;
  min-width: 0;
}

.login-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #111;
}

.login-sub {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.login-btn {
  width: 180rpx !important;
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 28rpx;
  margin: 0 16rpx !important;
  border-radius: 32rpx;
  background: #E53935;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
}


/** 两大入口 **/
.entry-card {
  display: flex;
  align-items: stretch;
  padding: 0;
}

.entry {
  width: 50%;
  padding: 28rpx 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.divider-vertical {
  width: 2rpx;
  background: #f1f1f1;
}

.divider-horizontal {
  height: 3rpx;
  background: #f1f1f1;
}

.entry-img {
  width: 100rpx;
  height: 100rpx;
}

.entry-title {
  margin-top: 8rpx;
  font-size: 34rpx;
  font-weight: 700;
  color: #222;
}

.entry-sub {
  margin-top: 4rpx;
  font-size: 24rpx;
  color: #8a8f99;
}

.pink {
  color: #ff6a7b;
}

/** 宫格 **/
.grid-card {
  padding: 20rpx 10rpx;
}

.grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 6rpx;
}

.grid-item {
  padding: 18rpx 8rpx;
  text-align: center;
}

.grid-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 8rpx;
}

.grid-title {
  font-size: 26rpx;
  color: #333;
}

.grid-sub {
  font-size: 22rpx;
  color: #a0a6b3;
}

/** 徽章任务 **/
.badge-card {
  margin: 30rpx;
  padding: 20rpx;
  background-color: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.badge-row {
  display: flex;
  align-items: center;
  padding: 10rpx;
  gap: 16rpx;
}

.badge-icon {
  width: 80rpx;
  height: 80rpx;
}

.badge-main {
  flex: 1;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.badge-title {
  font-size: 28rpx;
  color: #111;
  margin-bottom: 10rpx;
}

.task-progress {
  position: relative;
  height: 18rpx;
}

.task-bar-bg {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: #f0f1f5;
  border-radius: 999rpx;
}

.task-bar-fill {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  background: #ff9c35;
  border-radius: 999rpx;
}

.task-text {
  position: absolute;
  right: 8rpx;
  top: -36rpx;
  font-size: 22rpx;
  color: #a0a6b3;
}

.btn-primary {
  height: 56rpx;
  /* 调小高度 */
  line-height: 56rpx;
  padding: 0 24rpx;
  /* ✅ 缩小左右内边距 */
  min-width: 160rpx;
  /* ✅ 设置最小宽度，让按钮更紧凑 */
  font-size: 28rpx !important;
  /* ✅ 字体更小，和UI图一致 */
  font-weight: bold;
  color: #fff;
  background-color: #ff6a00;
  /* 橙色背景 */
  border-radius: 9999rpx;
  /* 胶囊形状 */
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 106, 0, 0.3);
  text-align: center;
}

.btn-primary::after {
  border: none;
}

/* === 大家都在喝（横向滚动） === */
.drink-scroll {
  margin: 30rpx;
  padding: 30rpx;
  background-color: #f5deb3;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.drink-hd {
  margin-left: 20rpx;
  margin-bottom: 25rpx;
}

.drink-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #222;
}

/* 横向滚动容器：用 nowrap + inline-block */
.goods {
  white-space: nowrap;
  overflow: hidden;
  padding-bottom: 8rpx;
}

/* 单卡片：inline-block 才能横排 */
.item {
  display: inline-block;
  vertical-align: top;
  width: 250rpx;
  /* 卡片宽度 */
  margin-right: 20rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, .06);
  padding: 16rpx;
  box-sizing: border-box;
}

.pic {
  display: block;
  width: 100%;
  height: 230rpx;
  border-radius: 16rpx;
  background: #f7f8fa;
}

.name {
  display: block;
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 1.3;
}

.price {
  display: block;
  margin-top: 6rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #111;
}

/* 右侧预留一点空白，滚到末尾不贴边 */
.tail-space {
  display: inline-block;
  width: 24rpx;
  height: 1rpx;
}